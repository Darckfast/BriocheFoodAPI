{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@repository/*": [
        "src/repositories/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@beans/*": [
        "src/beans/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ]
    }
  }
}